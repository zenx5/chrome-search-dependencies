{
    "name":"Github search dependencies",
    "version":"1.0",
    "manifest_version":3,
    "background":{
        "service_worker":"background.js"
    },
    "permissions":[],
    "options_page":"src/html/option.html",
    "content_scripts":[
        {
            "matches":[
                "https://github.com/*",
                "https://github.com/*?tab=repositories"
            ],
            "js":[
                "src/js/constants.js",
                "src/js/messaging.js",
                "src/js/frame.js",
                "src/js/observer.js"
            ],
            "css":[
                "src/css/iframe.css"
            ]
        }
    ],
    "web_accessible_resources":[
        {
            "resources":["src/html/search.html"],
            "matches":["https://github.com/*"]
        }
    ]
}